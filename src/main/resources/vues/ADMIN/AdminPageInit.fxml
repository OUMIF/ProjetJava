<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>  <!-- Importing chart components -->

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Admin.DashboardController" stylesheets="@styles.css">
    <!-- Header Section -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="117.0" prefWidth="856.0" spacing="10.0" style="-fx-background-color: #2E3B4E; -fx-padding: 10;">
            <!-- Image moved to the left corner and referenced from the resources folder -->
            <ImageView fitHeight="87.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@logoensa.jpeg" />
                </image>
            </ImageView>
            <Label prefHeight="35.0" prefWidth="434.0" style="-fx-text-fill: white; -fx-font-size: 24px;" text="Welcome to the Dashboard" />
        </HBox>
    </top>

    <!-- Sidebar Section -->
    <left>
        <VBox alignment="TOP_LEFT" prefHeight="535.0" prefWidth="216.0" spacing="10.0" style="-fx-background-color: #1D2A3B; -fx-padding: 20;">
            <Button onAction="#onStatistiqueButtonClick" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Statistiques" />
            <Button onAction="#onGestiondesProfesseurButtonClick" prefHeight="25.0" prefWidth="185.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Gestion Des Professeurs" />
            <Button onAction="#onGestiondesSecretaireButtonClick" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Gestion Des Secretaires" />
            <Button onAction="#onGestiondesEtudiantButtonClick" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Gestion Des Etudiants" />
            <Button onAction="#onGestiondesModulesButtonClick" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Gestion Des Modules" />
            <Button onAction="#onDesconnected" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Se deconnecter" />
        </VBox>
    </left>

    <!-- Content Area -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <HBox spacing="20" alignment="CENTER">
                <VBox spacing="10" style="-fx-background-color: #3A4B63; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Étudiants" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                    <Label fx:id="studentCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: #3A4B63; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Professeurs" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                    <Label fx:id="professorCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: #3A4B63; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Secrétaires" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                    <Label fx:id="secretaryCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: #3A4B63; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label text="Modules" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                    <Label fx:id="moduleCountLabel" text="0" style="-fx-text-fill: white; -fx-font-size: 24px;"/>
                </VBox>
            </HBox>
        </VBox>

    </center>
</BorderPane>
