<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dashboard.HelloController">
  <!-- Header Section -->
  <top>
    <HBox alignment="CENTER_LEFT" prefHeight="117.0" prefWidth="856.0" spacing="10.0" style="-fx-background-color: #2E3B4E; -fx-padding: 10;">
      <!-- Image moved to the left corner and referenced from the resources folder -->
      <ImageView fitHeight="87.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
        <image>
          <Image url="@ProfesseurInterface/logoensa.jpeg" />
        </image>
      </ImageView>
      <Label prefHeight="35.0" prefWidth="434.0" style="-fx-text-fill: white; -fx-font-size: 24px;" text="Welcome to the  Dashboard" />
    </HBox>
  </top>

  <!-- Sidebar Section -->
  <left>
    <VBox alignment="TOP_LEFT" prefHeight="535.0" prefWidth="216.0" spacing="10.0" style="-fx-background-color: #1D2A3B; -fx-padding: 20;">
      <Button onAction="#onDashboardButtonClick" prefWidth="177.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="Dashboard" />
      <Button onAction="#onStudentManagementButtonClick" prefHeight="25.0" prefWidth="184.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="gestion des etudiant " />
      <Button onAction="#onCoursesButtonClick" prefHeight="25.0" prefWidth="185.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="gestion des professeurs " />
      <Button onAction="#onReportsButtonClick" prefHeight="25.0" prefWidth="185.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="gestion des secraitaires" />
      <Button onAction="#onSettingsButtonClick" prefHeight="25.0" prefWidth="187.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" text="gestion des module " />
      <Button onAction="#onLogoutButtonClick" prefHeight="25.0" prefWidth="190.0" style="-fx-background-color: #3A4B63; -fx-text-fill: white;" />
    </VBox>
  </left>

  <!-- Content Area -->
  <center>
    <VBox alignment="CENTER" prefHeight="547.0" prefWidth="570.0" spacing="20.0" style="-fx-background-color: #F4F6F9; -fx-padding: 20;">
      <Label fx:id="welcomeText" style="-fx-font-size: 20px;" text="Welcome to the Admin Dashboard" />

      <!-- Example Table for Student Management Section -->
      <TableView fx:id="studentTable" prefHeight="400" prefWidth="600">
        <columns>
          <TableColumn text="ID" />
          <TableColumn text="Name" />
          <TableColumn text="Email" />
          <TableColumn text="Course" />
          <TableColumn text="Status" />
        </columns>
      </TableView>

      <!-- Action Buttons -->
      <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onAddStudentButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Student" />
        <Button onAction="#onEditStudentButtonClick" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Edit Student" />
        <Button onAction="#onDeleteStudentButtonClick" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Delete Student" />
        <TextField promptText="Search Student" style="-fx-padding: 10;" />
        <Button onAction="#onSearchButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Search" />
      </HBox>
    </VBox>
  </center>
</BorderPane>
